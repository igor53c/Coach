<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mecLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_domacinMec"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:text="club"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_domacinGolMec" />

    <TextView
        android:id="@+id/tv_gostMec"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="club"
        app:layout_constraintBottom_toBottomOf="@+id/tv_gostGolMec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_gostGolMec"
        app:layout_constraintTop_toTopOf="@+id/tv_gostGolMec" />

    <TextView
        android:id="@+id/tv_domacinGolMec"
        android:layout_width="20sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="00"
        app:layout_constraintBottom_toBottomOf="@+id/tv_domacinMec"
        app:layout_constraintStart_toEndOf="@+id/tv_domacinMec"
        app:layout_constraintTop_toTopOf="@+id/tv_domacinMec"
        app:layout_constraintEnd_toStartOf="@+id/tv_gostGolMec" />

    <TextView
        android:id="@+id/tv_gostGolMec"
        android:layout_width="20sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="00"
        app:layout_constraintBottom_toBottomOf="@+id/tv_domacinGolMec"
        app:layout_constraintStart_toEndOf="@+id/tv_domacinGolMec"
        app:layout_constraintTop_toTopOf="@+id/tv_domacinGolMec"
        app:layout_constraintEnd_toStartOf="@+id/tv_gostMec"/>
</androidx.constraintlayout.widget.ConstraintLayout>